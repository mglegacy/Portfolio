generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String    @id @default(uuid())
  name       String
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("Users")  // aponta para a tabela existente
}

model Projects {
  id          String    @id @default(uuid())
  titulo      String
  tipo        String
  banner      String
  description String
  tecnologies String[]
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

  @@map("Projects") // aponta para a tabela existente
}
