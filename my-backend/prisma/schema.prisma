generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model user{ 
  id String @id @default(uuid())
  name String
  password String
  created_at DateTime? @default(now()) //por default == por padrão
  updated_at DateTime? @default(now())
}

model project{
  id String @id @default(uuid())
  titulo String
  tipo String
  banner String
  description String
  tecnologies String
  created_at DateTime? @default(now()) //por default == por padrão
  updated_at DateTime? @default(now())
}
  
